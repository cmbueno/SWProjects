@model BusinessLayer.User_Model_BusinessLayer

@{
    ViewBag.Title = "Update User";

    var dicEmail = (Dictionary<string, string>)ViewData["emailDict"];
}
<div class="container">

<div class="col-md-12 text-center"><h4>Update User</h4></div>

@if (!(ViewBag.mssgBack_User == null))
{<div class="col-md-12 text-center">@Html.Raw(ViewBag.mssgBack_User)<br /></div>}
@if (!(ViewBag.mssgBack_Email == null))
{<div class="col-md-12 text-center">@Html.Raw(ViewBag.mssgBack_Email)<br /></div>}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="form-horizontal">
        <div class="col-md-12" style="color:red;"><p>Fields marked with an asterisk * are required.</p></div>

        <div class="form-group">
            @Html.LabelFor(model => model.LAST_NAME, new { @class = "control-label col-md-6" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.LAST_NAME)
                @Html.ValidationMessageFor(model => model.LAST_NAME)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ROLE_ID, new { @class = "control-label col-md-6" })
            <div class="col-md-6">
                @Html.DropDownListFor(model => model.ROLE_ID, Model.ROLE_ID_LIST, "-- SELECT ONE --")
                @Html.ValidationMessageFor(model => model.ROLE_ID)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <table class="table table-condensed table-striped table-responsive text-center">
                    <thead>
                        <tr>
                            <th>Send User Email Conditions</th>
                            <th class="text-center">Primary Email</th>
                            <th class="text-center">CC Email</th>
                            <th class="text-center">BCC Email</th>
                            <th class="text-center">None</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td scope="row" class="text-left">Technical Solutions</td>
                            <td>@Html.RadioButton("TechSolutions", "P", (dicEmail["46"] == "P") ? new { @checked = "checked" } : null)</td>
                            <td>@Html.RadioButton("TechSolutions", "C", (dicEmail["46"] == "C") ? new { @checked = "checked" } : null)</td>
                            <td>@Html.RadioButton("TechSolutions", "B", (dicEmail["46"] == "B") ? new { @checked = "checked" } : null)</td>
                            <td>@Html.RadioButton("TechSolutions", "N", (dicEmail["46"] == "N") ? new { @checked = "checked" } : null)</td>
                        </tr>

                        <tr>
                            <td scope="row" class="text-left">Contact Us</td>
                            <td>@Html.RadioButton("ContactUs", "P", (dicEmail["47"] == "P") ? new { @checked = "checked" } : null)</td>
                            <td>@Html.RadioButton("ContactUs", "C", (dicEmail["47"] == "C") ? new { @checked = "checked" } : null)</td>
                            <td>@Html.RadioButton("ContactUs", "B", (dicEmail["47"] == "B") ? new { @checked = "checked" } : null)</td>
                            <td>@Html.RadioButton("ContactUs", "N", (dicEmail["47"] == "N") ? new { @checked = "checked" } : null)</td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-4 col-md-4 text-center">
                <input type="submit" value="Submit" />
            </div>
        </div>
    </div>
}

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
